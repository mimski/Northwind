@model CustomerIndexViewModel

@{
    ViewData["Title"] = "Customers";
}

<h1 class="mb-3">Customers</h1>

<form method="get" class="mb-3 d-flex">
    <input class="form-control me-2" type="search" name="search" placeholder="Search by company name" value="@Model.Search">
    <button class="btn btn-primary" type="submit">Search</button>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Company</th>
            <th class="text-end">Orders</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model.Customers)
        {
            <tr>
                <td>
                    <a asp-action="Details" asp-route-id="@customer.Id">@customer.CompanyName</a>
                </td>
                <td class="text-end">@customer.OrdersCount</td>
            </tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination">
        <li class="page-item @(Model.Page == 1 ? "disabled" : "")">
            <a class="page-link" href="?page=@(Model.Page - 1)&search=@Model.Search">Prev</a>
        </li>
        <li class="page-item">
            <a class="page-link" href="?page=@(Model.Page + 1)&search=@Model.Search">Next</a>
        </li>
    </ul>
</nav>
